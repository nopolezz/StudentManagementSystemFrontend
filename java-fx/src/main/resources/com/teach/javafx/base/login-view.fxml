   </bottom>
   <left>
      <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="158.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="TOP_CENTER">
         <BorderPane.margin>
            <Insets left="20.0" top="50.0" />
         </BorderPane.margin>
         <image>
            <Image url="@../picture/xiaohui.jpg" />
         </image>
      </ImageView>
   </left>
